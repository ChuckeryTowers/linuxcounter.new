    --header 'x-lico-apikey: YOUR-APIKEY-HERE' \
    --data 'key=value' \
    --data 'key=value' \
    --data 'key=value'
</code></pre>


                                    </div>
                                </div>
                            </div>



                            <div id="apidoc2" class="apidocbox">
                                <div class="row apidoctitle">
                                    <div class="col-sm-2 apimethod get">GET</div>
                                    <div class="col-sm-10 api-action">
                                        foo bar
                                    </div>
                                </div>
                                <div id="apidoc_desc2" class="apidocdesc">
                                    <div class="apidocdesc_div">


                                        foo bar


                                    </div>
                                </div>
                            </div>



                            <div id="apidoc3" class="apidocbox">
                                <div class="row apidoctitle">
