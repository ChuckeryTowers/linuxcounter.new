{% extends "SywFrontApiBundle::base.html.twig" %}

{% block body %}

    <!-- Page Content -->
    <div class="container page">
        <div class="row">
            <div class="col-sm-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">{{ 'RESTful API Documentation'|trans }} (API itself not functional yet!)</h3>
                    </div>
                    <div id="apidoc" class="panel-body apidoc">
                        <div class="apidoccontent">



                            <div id="apidoc1" class="apidocbox">
                                <div class="row apidoctitle">
