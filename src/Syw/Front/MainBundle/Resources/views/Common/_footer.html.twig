                <a href="{{ url('syw_front_main_main_contact') }}">{{ 'Contact'|trans }}</a><br/>
                <a href="https://github.com/alexloehner/linuxcounter.new/issues">{{ 'Bugtracker'|trans }}</a> &middot;
                <a href="https://github.com/alexloehner/linuxcounter.new">{{ 'Code base'|trans }}</a> &middot;
                <a href="https://travis-ci.org/alexloehner/linuxcounter.new">{{ 'Unittests'|trans }}</a> &middot;
                <a href="https://www.versioneye.com/user/projects/5509756b4996ebef3300004f">{{ 'Dependencies'|trans }}</a> &middot;
                <a href="https://github.com/alexloehner/linuxcounter.new/blob/master/LICENSE">{{ 'License'|trans }}</a> &middot;
                <a href="{{ url('syw_front_main_main_sponsor') }}">{{ 'Sponsor'|trans }}</a>
                {% if is_granted('ROLE_ADMIN') %}
                    &middot; <a href="{{ url('news_admin_list') }}">{{ 'News-Admin'|trans }}</a>
                    &middot; <a href="{{ url('admin') }}">{{ 'Administration'|trans }}</a>
                {% endif %}
                <br/>
            </div>
        </div>
        <p> &nbsp; </p>

        <div class="container">

            <div class="row onlineusers">
                {{ "There were %onlinecomplete% clients (%onlineusers% users and %onlinebots% bots)<br/>online during the last 5 minutes. %onlineloggedin% users were logged in."|trans({
                    '%onlinecomplete%': online.complete,
                    '%onlineusers%': online.users,
                    '%onlinebots%': online.bots,
                    '%onlineloggedin%': online.loggedin
                })|raw }}
            </div>
        </div>
        <p> &nbsp; </p>

        <div id="contact" class="container">

            <div class="row">
                {{ include('SywFrontMainBundle:Common:_social.html.twig') }}
